<%- include('./partials/header.ejs') -%>

<div class="row">
        <!-- Area Chart -->
        <div class="col-xl col-lg">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 text-center">
                        <div class="h5 mb-0 mr-3 font-weight-bold text-dark ml-2 mt-2">Data
                                <span style="color: #a253db;">Resep</span>
                        </div>
                    <!-- Button trigger modal -->
                </div>
                <button
                    type="button"
                    class="btn btn-lg btn-block btn-light tambahPasien"
                    data-toggle="modal"
                    data-target="#exampleModal">
                    Tambah
                </button>
                <div class="card-body body-kabeh">
                    <div class="table-responsive">
                        <table class="table table-striped table-light" id="dataTable">
                            <thead>
                                <tr class="text-dark text-left">
                                    <th>No</th>
                                    <th>Nama Pasien</th>
                                    <th>Dokter</th>
                                    <th>Nama Obat</th>
                                    <th colspan="2" class="text-center">Aksi</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var i = 1 %>
                                    <% join.forEach((result) => { %>
                                        <tr class="text-left">
                                            <td><%= result.kode_resep %></td>
                                            <td><%= result.nama_pasien %></td>
                                            <td><%= result.nama_dokter %></td>
                                            <td><%= result.nama_obat %></td>
                                            <td class="text-right">
                                                <a
                                                    href="/dataResep/detailResep/<%= result.kode_resep%>"
                                                    class="btn btn-sm">
                                                    <img src="/img/edit.png" width="25">
                                                </a>
                                            </td>
                                            <td class="text-left">
                                                <form
                                                    action="/dataDokter/<%= result.kode_resep%>?_method=DELETE"
                                                    method="post">
                                                    <button type="submit" class="btn btn-sm bg-transparent"><img src="/img/delete.png" width="25" onclick="alert('Berhasil Dihapus')">
                                                    </button>
                                                </form>
                                            </td>
                                            <%  i++ %>
                                            </tr>
                                            <% })  %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div
                        class="modal fade"
                        id="exampleModal"
                        tabindex="-1"
                        role="dialog"
                        aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header justify-content-center">
                                    <h5 class="modal-title" id="exampleModalLabel">Tambah Resep</h5>
                                </div>
                                <div class="modal-body">
                                    <form action="/dataResep" method="post">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Nama Pasien</label>
                                                <select class="form-control float-left" name="kode_reg_pasien">
                                                    <option value="" selected="selected" disabled>-- Pilih Pasien --</option>
                                                    <% pasien.forEach((result) => { %>
                                                        <option value="<%= result.kode_reg_pasien%>"><%= result.nama_pasien %></option>
                                                        <% }) %>
                                                        </select>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Nama Dokter</label>
                                                <select class="form-control float-left" name="kode_dokter">
                                                    <option value="" selected="selected" disabled>-- Pilih Dokter --</option>
                                                    <% dokter.forEach((result) => { %>
                                                        <option value="<%= result.kode_dokter%>"><%= result.nama_dokter %></option>
                                                        <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputCity">Obat</label>
                                                        <select class="form-control float-left" name="kode_obat">
                                                            <option value="" selected="selected" disabled>-- Pilih Obat --</option>
                                                            <% obat.forEach((result) => { %>
                                                            <option value="<%= result.kode_obat%>"><%= result.nama_obat%></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                            <div class="form-group col-md-6">
                                                                <label for="nama">Harga Obat</label>
                                                                <input type="text" class="form-control" name="harga_obat">
                                                            </div>
                                                        </div>
                                                <div class="form-group">
                                                    <label for="">Aturan Pakai</label>
                                                    <textarea class="form-control" id="alamat" rows="3" name="aturan_pakai"></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="">Tanggal Resep</label>
                                                    <input type="text" class="form-control" name="tgl_resep">
                                                </div>
                                                                        <div class="modal-footer">
                                                                            <button
                                                                                type="submit"
                                                                                class="btn btn-primary btn-lg btn-block"
                                                                                name="tambah"
                                                                                onclick="alert('antrian berhasil ditambah');">Tambah</button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <%- include('./partials/footer.ejs') -%>