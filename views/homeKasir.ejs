<%- include('./partials/header.ejs') -%>
    <!-- Content Row -->
    <div class="row">

        <!-- Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div
                                class="text-s font-weight-bold text-light text-uppercase mb-1 float-left mt-1"><img src="img/icon/pasien.png" alt="" width="40px"></div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-dark ml-2">Antrian
                                        <span style="color: #a253db;">Pasien</span></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto h2 text-dark font-weight-bold mt-2">
                            <%= jumlahPasien%>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div
                                class="text-s font-weight-bold text-light text-uppercase mb-1 float-left mt-1"><img src="img/icon/pasienDiperiksa.png" alt="" width="40px"></div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-dark ml-2">Sudah
                                        <span style="color: #22d7ff;">Periksa</span></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto h2 text-dark font-weight-bold mt-2">
                            <%= jumlahPasienSudahPeriksa%>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
    <div class="row">
        <!-- Area Chart -->
        <div class="col-xl col-lg">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 text-center">
                    <div class="h5 mb-0 mr-3 font-weight-bold text-dark ml-2 mt-2">
                        <span style="color: #7aa000;">Administrasi Pasien</span>
                    </div>
                </div>
                <div class="tab-content" id="nav-tabContent">
                    <!-- ! STEP 1 -->
                    <div
                        class="tab-pane fade show active"
                        id="nav-home"
                        role="tabpanel"
                        aria-labelledby="nav-home-tab">
                        <div class="container">
                            <% if(pasienSudahDirekam.length == 0) { %>
                                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                                    <strong>Belum ada Pasien!!</strong>
                                    <a href="/homeKasir">refresh</a>
                                </div>
                                <% } else if(pasienSudahDirekam.length > 0) { %>
                                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                        <strong>Periksa Pasien
                                        </strong>
                                        <a href="/homeKasir">refresh</a>
                                    </div>
                                <% } %>
                                <div class="row">
                                    <div class="col col-8">

                                        <ul class="list-group mb-4">
                                            <% pasienSudahPeriksa.forEach((pasien) => { %>
                                                <li class="list-group-item bg-light">
                                                    <div class="row">
                                                        <div class="col col-6">
                                                            <%= pasien.nama_pasien%>
                                                            <span class="badge badge-danger"><%= pasien.kode_reg_pasien%></span>
                                                        </div>
                                                        <div class="col col-6">
                                                            <form
                                                                action="/pasienSudahDiagnosa/<%= pasien.kode_reg_pasien %>?_method=PUT"
                                                                method="post">
                                                                <button
                                                                    type="button"
                                                                    class="btn btn-info btn-sm float-right badge-pill ml-3 font-weight-bold"
                                                                    data-toggle="modal"
                                                                    data-target="#diagnosa<%= pasien.kode_reg_pasien%>">BERI DIAGNOSA</button>
                                                            </form>
                                                        </div>
                                                    </li>
                                                    <% pasienSudahDirekam.forEach((pasien) => { %>
                                                        <div
                                                            class="modal fade bd-example-modal-xl"
                                                            id="diagnosa<%= pasien.kode_reg_pasien%>"
                                                            tabindex="-1"
                                                            role="dialog"
                                                            aria-labelledby="exampleModalLabel"
                                                            aria-hidden="true">
                                                            <div class="modal-dialog modal-xl" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">
                                                                            <span class="font-weight-bold"><%= pasien.nama_pasien%></span>(<%= pasien.tempat_pemeriksaan%>)</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <form action="/homeDokter/pasienSudahDiagnosa" method="post">
                                                                        <div class="modal-body">
                                                                            <input
                                                                                type="hidden"
                                                                                name="kode_reg_pasien"
                                                                                value="<%= pasien.kode_reg_pasien%>">
                                                                            <div class="form-row">
                                                                                <div class="col-md-4 mb-3">
                                                                                    <label for="inputPassword4">Tanggal Periksa</label>
                                                                                    <input
                                                                                        type="text"
                                                                                        class="form-control"
                                                                                        name="tgl_pemeriksaan"
                                                                                        placeholder="contoh <%= moment().format('DD MMMM, YYYY') %>">
                                                                                </div>
                                                                                <div class="col-md-4 mb-3">
                                                                                    <label for="inputPassword4">Nama Dokter</label>
                                                                                    <select class="form-control float-left" name="kode_dokter">
                                                                                        <option value="" selected="selected">-- Pilih Dokter --</option>
                                                                                        <% dokter.forEach((result) => { %>
                                                                                            <option value="<%= result.kode_dokter%>"><%= result.nama_dokter %>
                                                                                                (<%= result.spesialis %>)</option>
                                                                                            <% }) %>
                                                                                            </select>
                                                                                        </div>
                                                                                        <div class="col-md-4 mb-3">
                                                                                            <label for="inputCity">Tindakan</label>
                                                                                            <select class="form-control float-left" name="kode_tindakan">
                                                                                                <option value="" selected="selected">-- Pilih Tindakan --</option>
                                                                                                <% tindakan.forEach((result) => { %>
                                                                                                    <option value="<%= result.kode_tindakan%>"><%= result.nama_tindakan%></option>
                                                                                                    <% })  %>
                                                                                                    </select>
                                                                                                </div>
                                                                                            </div>
                                                                                            <div class="form-row">
                                                                                                <div class="col-md-4 mb-3">
                                                                                                    <label for="alamat">Hasil Pemeriksaan</label>
                                                                                                    <textarea class="form-control" id="alamat" rows="3" name="hasil_pemeriksaan"></textarea>
                                                                                                </div>
                                                                                                <div class="col-md-4 mb-3">
                                                                                                    <label for="nama">Status Pemeriksaan</label>
                                                                                                    <select class="form-control float-left" name="status_pemeriksaan">
                                                                                                        <option value="" selected="selected">-- Pilih Status --</option>
                                                                                                        <option value="Rawat Inap">Rawat Inap</option>
                                                                                                        <option value="Rawat Jalan">Rawat Jalan</option>
                                                                                                    </select>
                                                                                                </div>
                                                                                                <div class="col-md-4 mb-3">
                                                                                                    <label for="inputCity">Ruang</label>
                                                                                                    <select class="form-control float-left" name="kode_ruang">
                                                                                                        <option value="" selected="selected">-- Pilih Ruang --</option>
                                                                                                        <% ruangan.forEach((result) => { %>
                                                                                                            <option value="<%= result.kode_ruang%>"><%= result.nama_ruang%>
                                                                                                                <span class="badge badge-pill badge-danger">(<%= result.kelas %>)</span></option>
                                                                                                            <% })  %>
                                                                                                            </select>
                                                                                                        </div>
                                                                                                    </div>
                                                                                                    <button class="btn btn-primary btn-lg btn-block font-weight-bold" type="submit">Kirim</button>
                                                                                                </div>
                                                                                            </form>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <% }) %>
                                                                                    <% }) %>
                                                                                    </ul>

                                                                                </div>
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <%- include('./partials/footer.ejs') -%>