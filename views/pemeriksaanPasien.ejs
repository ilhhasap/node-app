<%- include('./partials/header.ejs') -%>

    <div class="row">
        <!-- Area Chart -->
        <div class="col-xl col-lg">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 text-center">
                    <div class="h5 mb-0 mr-3 font-weight-bold text-dark ml-2 mt-2">Langkah 1 | 
                        <span style="color: #a253db;">Pilih Pasien</span>
                    </div>
                </div>
                  <div class="tab-content" id="nav-tabContent">
                      <!-- ! STEP 1 -->
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="container">
                                <% if(pasien.length == 0) { %>
                                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                                            <strong>Belum ada Antrian saat ini!!</strong>
                                        </div>
                                  <% } else if(pasien.length > 0) { %>
                                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                            <strong>Periksa Pasien </strong> dan lanjut <strong>Beri Diagnosa !</strong> 
                                        </div>
                                    <% } %>

                                  <div class="row">
                                      <div class="col col-8">

                                  <ul class="list-group mb-4">
                                      <% pasien.forEach((pasien) => { %>
                                    <li class="list-group-item bg-light">
                                        <div class="row">
                                            <div class="col col-6">
                                         <%= pasien.nama_pasien%> <span class="badge badge-danger"><%= pasien.kode_reg_pasien%></span>
                                        </div>
                                        <div class="col col-6">
                                         <form action="/pemeriksaanPasien/<%= pasien.kode_reg_pasien %>?_method=PUT" method="post">
                                        <button type="submit" class="btn btn-info btn-sm float-right badge-pill ml-3 font-weight-bold">PERIKSA</button>
                                        </form>
                                        <form
                                        action="/daftarPasien/<%= pasien.kode_reg_pasien%>?_method=DELETE"
                                        method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm float-right badge-pill ml-4 font-weight-bold">BATAL</button>
                                    </div>
                                        </form>
                                    </div>
                                    </li>
                                    <% }) %>
                                  </ul>

                                </div>
                                </div>

                        </div>
                    </div>
                  </div>
            </div>
        </div>

    </div>


    <div class="row" style="margin-top: 100px;">
            <!-- Area Chart -->
            <div class="col-xl col-lg">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3 text-center">
                        <div class="h5 mb-0 mr-3 font-weight-bold text-dark ml-2 mt-2">Langkah 2 |
                            <span style="color: #a253db;">Pemberian Diagnosa</span>
                        </div>
                    </div>
                      <div class="tab-content" id="nav-tabContent">
                          <!-- ! STEP 1 -->
                        <div class="tab-pane fade show active" id="step-diagnosa" role="tabpanel" aria-labelledby="nav-home-tab">
