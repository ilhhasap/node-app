                                        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                                                <strong>Periksa Pasien</strong> terlebih dahulu !!!
                                              </div>
                                              <% } else if(pasienSudahPeriksa.length > 0) { %>
                                                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                                        <strong>Beri Diagnosa</strong> sesuai Antrian!!
                                                      </div>
                                                      <% } %>
            
                                              <div class="row">
                                                  <div class="col col-8">
            
                                              <ul class="list-group mb-4">
                                                  <% pasienSudahPeriksa.forEach((pasien) => { %>
                                                <li class="list-group-item bg-light">
                                                    <div class="row">
                                                        <div class="col col-6">
                                                     <%= pasien.nama_pasien%> <span class="badge badge-danger"><%= pasien.kode_reg_pasien%></span>
                                                    </div>
                                                    <div class="col col-6">
                                                     <form action="/pemeriksaanPasien/<%= pasien.kode_reg_pasien %>?_method=PUT" method="post">
                                                    <button type="submit" class="btn btn-info btn-sm float-right badge-pill ml-3 font-weight-bold">BERI DIAGNOSA</button>
                                                    </form>
                                                    <form
                                                    action="/daftarPasien/<%= pasien.kode_reg_pasien%>?_method=DELETE"
                                                    method="post">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm float-right badge-pill ml-4 font-weight-bold">BATAL</button>
                                                </div>
                                                    </form>
                                                </div>
                                                </li>
                                                <% }) %>
                                              </ul>
            
                                            </div>
                                            </div>
            
                                    </div>
                            </div>
                        </div>
                        <!-- ! AKHIR STEP 1 -->
    
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
                        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
                      </div>
                </div>
            </div>
    
        </div>

    <%- include('./partials/footer.ejs') -%>