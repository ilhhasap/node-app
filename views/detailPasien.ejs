<%- include('./partials/header.ejs') -%>
    <% result.forEach((result)=> { %>
        <form
            class="needs-validation"
            action="/daftarPasien/<%= result.kode_reg_pasien%>?_method=PUT"
            method="post">
            <div class="col-md-6 text-center m-auto">
                <label for="validationTooltip01">Kode Registrasi</label>
                <input
                    type="text"
                    class="form-control form-control-lg text-center text-white font-weight-bold mb-5"
                    value="<%= result.kode_reg_pasien %>"
                    style="background-color: #a253db;"
                    disabled="disabled"/>
            </div>
            <div class="container">
                <div class="form-row mb-4">
                    <div class="col-md-4 mb-3">
                        <label for="validationTooltip02">NIK</label>
                        <input
                            type="text"
                            class="form-control"
                            value="<%= result.nik%>"
                            required="required"
                            name="nik"/>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="validationTooltipUsername">Nama Pasien</label>
                        <div class="input-group">
                            <input
                                type="text"
                                class="form-control"
                                value="<%= result.nama_pasien %>"
                                required="required"
                                name="nama_pasien" required/>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="inputCity">Jenis Kelamin</label>
                        <select class="form-control float-left" name="jeniskel" disabled="disabled" required>
                            <option value="<%= result.jeniskel %>"><%= result.jeniskel %></option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="alamat">Alamat</label>
                        <textarea class="form-control" id="alamat" rows="3" name="alamat_pasien" required>
                            <%= result.alamat_pasien %></textarea >
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="validationTooltipUsername">No Telp</label>
                        <div class="input-group">
                            <input
                                type="text"
                                class="form-control"
                                value="<%= result.no_telp %>"
                                required="required"
                                name="no_telp"/>
                        </div>
                    </div>
                    <div class="col-md mb-3">
                        <label for="validationTooltipUsername">Usia</label>
                        <div class="input-group">
                            <input
                                type="text"
                                class="form-control"
                                value="<%= result.usia %>"
                                required="required"
                                name="usia"/>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="validationTooltipUsername">Tanggal Daftar</label>
                        <div class="input-group">
                            <input
                                type="text"
                                class="form-control"
                                value="<%= result.tgl_daftar %>"
                                required="required"
                                name="tgl_daftar"/>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-3">
                        <label for="inputCity">Tempat Pemeriksaan</label>
                        <select class="form-control float-left" name="tempat_pemeriksaan" required>
                            <option value="<%= result.tempat_pemeriksaan%>"><%= result.tempat_pemeriksaan%></option>
                            <option value="" disabled>-------------------------</option>
                            <option value="Poli Penyakit Dalam">Poli Penyakit Dalam</option>
                            <option value="Poli Spesialis Anak">Poli Spesialis Anak</option>
                            <option value="Poli Gigi dan Mulut">Poli Gigi dan Mulut</option>
                            <option value="Poli Spesialis THT">Poli Spesialis THT</option>
                            <option value="Poli Penyakit Kulit dan Kelamin">Poli Penyakit Kulit dan Kelamin</option >
                            <option value="Poli Spesialis Mata">Poli Spesialis Mata</option>
                            <option value="Poli Spesialis Syaraf">Poli Spesialis Syaraf</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="validationTooltipUsername">Status Pasien</label>
                        <select class="form-control" name="status_pasien" id="">
                            <option value="<%= result.kode_reg_pasien%>"><%= result.status_pasien%></option>
                            <option value="sudah periksa">sudah periksa</option>
                            <option value="belum diperiksa">belum diperiksa</option>
                        </select>
                    </div>
                </div>
                <div class="form-row m-auto pt-5">
                    <a href="/daftarPasien" class="btn btn-block btn-dark">Tutup</a>
                    <button
                        class="btn btn-block btn-dark"
                        type="submit"
                        onclick="alert('data berhasil diupdate');" style="background-color: #a253db;">
                        Simpan
                    </button>
                </div>
            </div>
            <% }) %>
            </form>

            <%- include('./partials/footer.ejs') -%>