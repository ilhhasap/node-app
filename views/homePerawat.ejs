                                                                                                                    placeholder="contoh <%= moment().format('DD MMMM, YYYY') %>">
                                                                                                                    </div>
                                                                                                                            <div class="modal-footer">
                                                                                                                                <button
                                                                                                                                    type="submit"
                                                                                                                                    class="btn btn-lg btn-info btn-block font-weight-bold"
                                                                                                                                    name="tambah"
                                                                                                                                    onclick="alert('Rekam Medis berhasil Ditambah!');"">BUAT</button>
                                                                                                                            </div>
                                                                                                                        </form>
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                <% }) %>
                                                                                                <% }) %>
