                                                                    action="/homePerawat/<%= pasien.kode_reg_pasien %>?_method=PUT"
                                                                    method="post">
                                                                    <button
                                                                        type="submit"
                                                                        class="btn btn-info btn-sm float-right badge-pill ml-3 font-weight-bold" onclick="alert('pasien telah diperiksa dan akan didiagnosa DOKTER')">PERIKSA</button>
                                                                </form>
                                                                <form
                                                                    action="/<%= pasien.kode_reg_pasien%>?_method=DELETE"
                                                                    method="post">
                                                                    <button
