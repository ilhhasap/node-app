                                </div>
                                <div class="tab-content" id="nav-tabContent">
                                    <!-- ! STEP 1 -->
                                    <div
                                        class="tab-pane fade show active"
                                        id="step-diagnosa"
                                        role="tabpanel"
                                        aria-labelledby="nav-home-tab">
                                        <div class="container">
                                            <% if(pasienSudahResep.length == 0) { %>
                                                <!-- ! Jika TIDAK ADA PASIEN PERIKSA -->
                                                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                                                    <strong>Tunggu Resep dari Dokter dulu</strong> <a href="/homePerawat">refresh</a>
                                                </div>
                                                <% } else if(pasienSudahResep.length > 0) { %>
                                                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                                        <strong>Buat Rekam medis</strong> <a href="/homePerawat">refresh</a>
                                                    </div>
                                                <% } %>
    
                                                <div class="row">
                                                    <div class="col col-8">
    
                                                        <ul class="list-group mb-4">
